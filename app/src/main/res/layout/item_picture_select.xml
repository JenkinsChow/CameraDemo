<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <com.hm.camerademo.ui.widget.ScaleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/img_local"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/ic_pictures_selected" />

    </com.hm.camerademo.ui.widget.ScaleRelativeLayout>

</layout>
